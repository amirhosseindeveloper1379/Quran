<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quran_Prayers_pilgrimages" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="navigation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/Navigation</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:padding">10dp</item>
        <item name="bubbletab_icon_size">25dp</item>
        <item name="bubbletab_title_size">20dp</item>
        <item name="bubbletab_disabled_icon_color">@color/Navigation</item>
        <item name="bubbletab_menuResource">@menu/navigation_menu</item>
    </style>

    <style name="Menu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/Navigation</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/black</item>
        <item name="menu">@menu/sliding_menu</item>
        <item name="android:layout_gravity">start</item>
        <item name="headerLayout">@layout/header_menu</item>
    </style>

    <style name="Toolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/Toolbar</item>
    </style>
</resources>